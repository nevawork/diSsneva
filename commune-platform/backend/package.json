    "@fastify/multipart": "^8.0.0",
    "@fastify/rate-limit": "^9.1.0",
    "@fastify/redis": "^6.1.1",
    "@fastify/sensible": "^5.5.0",
    "@fastify/websocket": "^8.3.0",
    "@prisma/client": "^5.7.0",
    "argon2": "^0.31.2",
    "aws-sdk": "^2.1520.0",
